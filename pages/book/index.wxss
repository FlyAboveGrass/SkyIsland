.search {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.search-container {
    position: fixed;
    width: 100%;
    height: 110rpx;
    background-color: white;
    box-shadow: 0 1rpx 4rpx lightgray;
}
.search-box {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80%;
    height: 64rpx;
    border-radius: 32rpx;
    margin: 0px auto;
    padding-left: 32rpx;
    background-color: #f3f3f5;
}
.search-box .search-img {
    width: 26rpx;
    height: 26rpx;
}
.search-box .search-placeholder {
    display: inline-block;
    padding-left: 32rpx;
    line-height: 64rpx;
    color: rgb(137, 137, 137);
}

.book-list-container {
    display: flex;
    width: 90%;
    margin: 110rpx auto 0;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: wrap;
}

.book-item {
    margin: 24rpx;
}