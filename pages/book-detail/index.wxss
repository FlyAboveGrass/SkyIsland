.container {
    background-color: #f5f5f5;
    width: 100%;
    padding-bottom: 140rpx;
}

.head {
    background-color: #fff;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* box-shadow:1px 1px 1px #e3e3e3; */
}

.head .book-image {
    width: 200rpx;
    height: 300rpx;
    box-shadow:2px 2px 3px #e3e3e3;
}
  
.head .title {
    color: #2f2f2f;
    margin-top: 20rpx;
    font-size: 38rpx;
    font-weight: 600;
    letter-spacing: 7rpx;
}
.head .author {
    font-size: 20rpx;
    color: #999999;
    height: 60rpx;
    line-height: 60rpx;
}

.sub-container {
    width: 690rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30rpx;
    background-color: #fff;
    padding: 30rpx;
}

.sub-container .content {
    padding: 24rpx;
}

.detail-container {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    padding: 60rpx;
    font-size: 28rpx;
    color: #666;
}
  
.vertical {
    display: flex;
    flex-direction: column;
}
  
.vertical-1 {
    align-items: flex-end;
}
  
.description {
    color: #999;
    margin-right: 30rpx;
}

.comment-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    min-height: 10vh;
    padding: 28rpx 0;
}
.comment-list .tag {
    margin: 10rpx;
}

.comment-list .comment-nums {
    display: inline-block;
    padding-left: 16rpx;
}

.fake-post, .post {
    border: 1px solid lightgray;
    border-radius: 30rpx;
    height: 60rpx;
    box-sizing: border-box;
    padding: 0px 40rpx;
    margin: 12rpx 24rpx;
}

.post-container {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 140rpx;
    background-color: white;
    box-shadow: 0 1px 2px grey;
}

.post-container .fake-post .sort-comment {
    line-height: 60rpx;
    color: #bbb;
}

.mask {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(225, 225, 225, 0.6);
}

.post-popover {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 30vh;
    background-color: white;
}

.post-header {
    overflow: hidden;
}
.post-btn {
    padding: 6rpx 10rpx;
    margin: 6rpx;
    float: right;
    font-size: 24rpx;
}

.btn-primary {
     color: blueviolet;
}

